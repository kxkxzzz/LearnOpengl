{
    "tasks": [
        {
            "label": "Compile",
            "command": "g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-I",
                "${workspaceFolder}/include",
                "-I",
                "${workspaceFolder}/Env/glm/",
                "-I",
                "${workspaceFolder}/Env/glad/include",
                "-I",
                "${workspaceFolder}/Env/glfw/glfw-src/glfw-3.3.8/include/",
                "-L",
                "${workspaceFolder}/Env/glfw/glfw-src/glfw-3.3.8/build/src",
                "-L",
                "${workspaceFolder}/Env/glad",
                "-lglfw3dll",
                "-lglad",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
            ],
            "type": "process",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": "$gcc"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe 生成活动文件",
